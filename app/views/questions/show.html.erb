<div class="container">
  <h2 class="title-lg mb">Питання <%= @question.id %></h2>
  <p class="mb-sm"><%= @question.body %></p>
  <p>user_id: <b><%= @question.user_id %></b></p>

  <div class="mt">
    <%= link_to  fa_icon('pencil'), edit_question_path(@question), title: 'редагувати питання' %>

    <%= button_to fa_icon('trash-o'), question_path(@question), method: :delete, title: 'видалити питання' %>
  </div>

  <p class="mt"><%= link_to "Усі питання", questions_path %></p>
</div>